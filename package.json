{
  "name": "email-click-tracking",
  "version": "1.0.0",
  "description": "Email click tracking system for security training and phishing simulation",
  "private": true,
  "scripts": {
    "start": "node --max-http-header-size=32768 server.js",
    "dev": "node scripts/dev-server.js",
    "dev:concurrent": "concurrently -k -n \"SERVER,CLIENT\" -c \"blue,green\" \"npm run server\" \"npm run client\"",
    "server": "node --max-http-header-size=32768 server.js",
    "client": "npm run start --prefix client",
    "build": "npm run build --prefix client",
    "build:client": "npm run build --prefix client",
    "add-recipients": "node examples/addRecipients.js",
    "create-campaign": "node examples/createCampaign.js",
    "view-report": "node examples/viewReport.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.81.1",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "nodemailer": "^7.0.10",
    "rate-limiter-flexible": "^8.2.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
